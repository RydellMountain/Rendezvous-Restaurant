@model AppDevProjectGroup27.Models.ViewModels.SpecialVM
@{
    ViewData["Title"] = "Newsletter |";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<br />
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="border backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Newsletter</h2>
        </div>
    </div>
    <br />
    @if (Model.MenuItems.Count() > 0)
    {
        @using (Html.BeginForm("Index", "Special", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div>
                Subject of Newsletter: &nbsp; <input class="text-box" type="text" asp-for="@Model.Subject" />
                &emsp;
                <input type="submit" value="Send Newsletter" class="btn btn-info" />
            </div>
        }
        <br />
    }
    <div>
        @if (Model.MenuItems.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.MenuItems.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MenuItems.FirstOrDefault().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MenuItems.FirstOrDefault().CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MenuItems.FirstOrDefault().SubCategoryId)
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model.MenuItems)
                {
                    <tr>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(m => item.Price)
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(m => item.Category.Name)
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(m => item.SubCategory.Name)
                        </td>
                        <td class="col-md-3 col-sm-12">
                            <img src="@item.Image" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p>No Items are on Special...</p>
        }
    </div>
</div>