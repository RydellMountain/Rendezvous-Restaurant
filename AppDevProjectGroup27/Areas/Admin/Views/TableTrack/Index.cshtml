@model IEnumerable<TableTrack>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Table Track List</h2>
        </div>
    </div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Table.SeatingName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DateTable)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.AmtAva)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Table.SeatingName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.DateTable)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.AmtAva)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-controller="Table" asp-action="Edit" asp-route-Id="@item.TableId">
                                    <i class="far fa-edit"></i>
                                </a>
                            </div>
                        <td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p>No Tables Exist...</p>
        }
    </div>
</div>