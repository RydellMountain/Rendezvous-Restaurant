@model AppDevProjectGroup27.Models.Table
@{
    ViewData["Title"] = "Delete Table |";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 class="text-info">Delete Table</h2>
<br />

<form method="post">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SeatingName" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SeatingName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MaxTables" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="MaxTables" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Active" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input type="checkbox" asp-for="Active" class="form-control" />
                </div>
            </div>
        </fieldset>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>