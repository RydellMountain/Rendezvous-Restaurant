@model AppDevProjectGroup27.Models.ViewModels.TableEditVM
@{
    ViewData["Title"] = "Edit Table |";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<h2 class="text-info">Edit Table</h2>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="OldMaxValue" />
    <input type="hidden" asp-for="Table.Id" />
    <input type="hidden" asp-for="Table.SeatingName" />
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Table.SeatingName" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Table.SeatingName" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Table.MaxTables" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Table.MaxTables" class="form-control" />
                </div>
                <span asp-validation-for="Table.MaxTables" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Table.Image" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Table.Active" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="Table.Active" class="form-control" />
                </div>
            </div>
            <div class="form-group row">

            </div>
            <div class="col-8 offset-4">
                <partial name="_EditAndBackToListButton" model="Model.Table.Id" />
            </div>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.Table.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


    </div>
</form>


@section Scripts{

    <script>
        function ValidNumeric(event) {
            var charCode = (event.which) ? event.which : event.keyCode;
            if (charCode >= 48 && charCode <= 57 || charCode == 8) { return true; }
            else { return false; }
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");};
}
