@model AppDevProjectGroup27.Models.ViewModels.SubCategoryDeleteVM
@{
    ViewData["Title"] = "Delete Sub-Category |";
}


<br />
<h2 class="text-info">Delete Sub-Category</h2>
<br />
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form method="post">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="SubCategory.Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SubCategory.Name" class="custom-label">Sub-Category Name</label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SubCategory.Category.Name" class="custom-label">Category Name</label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Category.Name" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.SubCategory.Id" />
            </div>
        </div>
    </div>
</form>