@model AppDevProjectGroup27.Models.ViewModels.CategoryDeleteVM

@{
    ViewData["Title"] = "Delete Category |";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<h2 class="text-info">Delete Category</h2>
<br />
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form method="post" asp-action="Delete">
    <div class="border backgroundWhite">

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Category.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Category.Name" readonly class="form-control" />
            </div>

        </div>
        <br />
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Category.Id" />
            </div>
        </div>
    </div>
</form>
